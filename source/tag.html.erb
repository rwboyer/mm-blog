---
layout: page
pageable: true
per_page: 10
blogindex: true
---

<div class="blog-index">
	<h1><%= tagname %></h1>
  <% page_articles.each do |current_article| %>
      <%= partial "article", :locals => {:post => current_article} %>
    <hr>
  <% end %>
  <div class="pagination">
    <% if paginate %>
	    <% if prev_page %>
	    	<%= link_to "&larr; Newer", prev_page.url %>
	    <% end %>
	  <% end %>
    <a href="/blog/archives">Blog Archives</a>
		<% if paginate %>
	    <% if next_page %>
	    	<%= link_to "Older &rarr;", next_page.url %>
	    <% end %>
	  <% end %>
  </div>
</div>
